{
  "dashboard": {
    "id": null,
    "title": "Sistema Biblioteca Municipal",
    "tags": ["biblioteca", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Solicitudes por Hora",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(biblioteca_requests_total[5m])",
            "legendFormat": "Solicitudes/s"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Préstamos Activos",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "biblioteca_loans_active",
            "legendFormat": "Préstamos Activos"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "value", "fixedColor": "green"},
            "unit": "none"
          }
        }
      },
      {
        "id": 3,
        "title": "Usuarios Registrados",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "biblioteca_users_total",
            "legendFormat": "Total Usuarios"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "value", "fixedColor": "blue"},
            "unit": "none"
          }
        }
      },
      {
        "id": 4,
        "title": "Documentos Disponibles",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "biblioteca_documents_available",
            "legendFormat": "Documentos Disponibles"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "value", "fixedColor": "purple"},
            "unit": "none"
          }
        }
      },
      {
        "id": 5,
        "title": "Solicitudes por Endpoint",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(biblioteca_requests_total[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "Tiempo de Respuesta",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(biblioteca_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(biblioteca_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "Errores por Tipo",
        "type": "piechart",
        "gridPos": {"h": 12, "w": 8, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "sum by (status) (rate(biblioteca_requests_total{status=~\"4..|5..\"}[5m]))",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Eventos Kafka",
        "type": "timeseries",
        "gridPos": {"h": 12, "w": 8, "x": 8, "y": 18},
        "targets": [
          {
            "expr": "rate(biblioteca_kafka_messages_sent_total[5m])",
            "legendFormat": "Mensajes Enviados"
          },
          {
            "expr": "rate(biblioteca_kafka_messages_processed_total[5m])",
            "legendFormat": "Mensajes Procesados"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "msgps"
          }
        }
      },
      {
        "id": 9,
        "title": "Logs por Nivel",
        "type": "logs",
        "gridPos": {"h": 12, "w": 8, "x": 16, "y": 18},
        "targets": [
          {
            "expr": "{job=\"biblioteca-app\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "wrapLogMessage": true,
          "prettifyLogMessage": true
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
