@model IEnumerable<frontend.Models.DocumentDto>

@{
    ViewData["Title"] = "Catálogo de Documentos";
}
@{
    var isAnonymous = ViewData["IsAnonymous"] != null && (bool)ViewData["IsAnonymous"];
}

@if (isAnonymous)
{
    @await Html.PartialAsync("_AnonymousCatalog", Model)
}
else
{
    <!-- Mantener la versión actual para usuarios autenticados -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>Catálogo de Documentos</h2>
            <p>Explora nuestra colección de libros, audios y videos.</p>
        </div>
    </div>

    <!-- Search and Filter Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="titulo" class="form-label">Título</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" value="@(ViewData["Titulo"])" />
                        </div>
                        <div class="col-md-3">
                            <label for="autor" class="form-label">Autor</label>
                            <input type="text" class="form-control" id="autor" name="autor" value="@(ViewData["Autor"])" />
                        </div>
                        <div class="col-md-3">
                            <label for="categoria" class="form-label">Categoría</label>
                            <input type="text" class="form-control" id="categoria" name="categoria" value="@(ViewData["Categoria"])" />
                        </div>
                        <div class="col-md-3">
                            <label for="search" class="form-label">Búsqueda general</label>
                            <input type="text" class="form-control" id="search" name="search" value="@(ViewData["Search"])" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Documents List -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var document in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@document.Titulo</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@document.Autor</h6>
                            <p class="card-text">
                                <strong>Editorial:</strong> @document.Editorial<br />
                                <strong>Año:</strong> @document.AnoEdicion<br />
                                <strong>Tipo:</strong> @document.Tipo<br />
                                <strong>Categoría:</strong> @document.Categoria<br />
                                <strong>Disponibles:</strong> @document.ItemsDisponibles
                            </p>
                        </div>
                        <div class="card-footer">
                            @if (document.ItemsDisponibles > 0)
                            {
                                <span class="badge bg-success">Disponible</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No disponible</span>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    No se encontraron documentos que coincidan con los criterios de búsqueda.
                </div>
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <nav aria-label="Paginación de documentos">
                    <!-- Add pagination if needed -->
                </nav>
            </div>
        </div>
    }
}
