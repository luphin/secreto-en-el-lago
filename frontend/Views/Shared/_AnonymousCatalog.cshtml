@model IEnumerable<frontend.Models.DocumentDto>
<div class="row">
    <div class="col-lg-2 d-none d-lg-block">
        <div class="card mb-4 sidebar-card">
            <div class="card-body">
                <h6 class="text-muted">NAVEGACIÓN</h6>
                <ul class="list-unstyled small">
                    <li><a asp-action="Index">Catálogo</a></li>
                    <li><a href="#">Literatura Internacional</a></li>
                    <li><a href="#">Más populares</a></li>
                    <li><a href="#">Nuevos ingresos</a></li>
                </ul>
                <hr />
                <h6 class="text-muted">RECURSOS DIGITALES</h6>
                <ul class="list-unstyled small">
                    <li><a href="#">Revistas digitales</a></li>
                    <li><a href="#">Audiolibros</a></li>
                    <li><a href="#">E-books</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-lg-10">
        <div class="catalog-content">
            <h5>Libros destacados</h5>
            <div class="section-sep"></div>
            <div class="row mb-4">
                @{
                    var destacados = (Model != null && Model.Any()) ? Model.Take(4) : Enumerable.Range(1,4).Select(i => (frontend.Models.DocumentDto)null);
                }
                @foreach (var doc in destacados)
                {
                    <div class="col-md-3 mb-3">
                        @await Html.PartialAsync("_DocumentCard", doc)
                    </div>
                }
            </div>

            <h5>Nuevos ingresos</h5>
            <div class="section-sep"></div>
            <div class="row mb-4">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="col-md-2 col-6 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="doc-cover-placeholder mb-2" style="height:90px;">Portada libro</div>
                                <div class="small">TÍTULO<br/><span class="text-muted">Autor</span></div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <h5>Recursos digitales disponibles</h5>
            <div class="section-sep"></div>
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card p-3">
                        <strong>E-books</strong>
                        <p class="small">Lorem</p>
                        <button class="btn btn-sm btn-outline-primary">Explorar</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <strong>Audiolibros</strong>
                        <p class="small">Lorem</p>
                        <button class="btn btn-sm btn-outline-primary">Escuchar</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <strong>Revistas</strong>
                        <p class="small">Lorem</p>
                        <button class="btn btn-sm btn-outline-primary">Leer</button>
                    </div>
                </div>
            </div>

            <h5>Categorías más populares</h5>
            <div class="section-sep"></div>
            <div class="mb-4">
                <div class="d-flex flex-wrap gap-2">
                    <div class="badge bg-light text-dark p-2">Acción <small class="d-block">1000 libros</small></div>
                    <div class="badge bg-light text-dark p-2">Cine <small class="d-block">100 libros</small></div>
                    <div class="badge bg-light text-dark p-2">Ciencia Ficción <small class="d-block">400 libros</small></div>
                    <div class="badge bg-light text-dark p-2">Misterio <small class="d-block">400 libros</small></div>
                    <div class="badge bg-light text-dark p-2">Historia <small class="d-block">400 libros</small></div>
                </div>
            </div>
        </div>
    </div>
</div>
